generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
}

model Category {
  id        String    @id @default(cuid())
  name_tr   String
  name_en   String
  image     String?
  products  Product[]
  createdAt DateTime  @default(now())
}

model Product {
  id          String   @id @default(cuid())
  name_tr     String
  name_en     String
  desc_tr     String?
  desc_en     String?
  price       Decimal
  image       String?
  isAvailable Boolean  @default(true)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  orderItems  OrderItem[]
}

model Table {
  id        String   @id @default(cuid())
  qrCode    String?
  number    Int
  requests  ServiceRequest[]
  orders    Order[]
}

model ServiceRequest {
  id        String   @id @default(cuid())
  tableId   String
  table     Table    @relation(fields: [tableId], references: [id])
  type      String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
}

// YENİ EKLENENLER: SİPARİŞ SİSTEMİ
model Order {
  id        String      @id @default(cuid())
  tableId   String
  table     Table       @relation(fields: [tableId], references: [id])
  items     OrderItem[]
  status    String      @default("PENDING") // PENDING, PREPARING, READY, COMPLETED
  total     Decimal
  note      String?
  createdAt DateTime    @default(now())
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal // Sipariş anındaki fiyatı saklamak önemli
}